generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id        Int    @id @default(autoincrement())
  name      String
  isoAlpha2 String
  isoAlpha3 String

  devices                 Device[] // relasi ke Device
  educationalInstitutions EducationalInstitution[] // relasi balik ke EducationalInstitution
}

model Device {
  id        Int     @id @default(autoincrement())
  name      String
  type      String
  countryId Int
  country   Country @relation(fields: [countryId], references: [id])
}

model EducationalInstitution {
  id         Int      @id @default(autoincrement())
  name       String
  countryId  Int
  country    Country  @relation(fields: [countryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user") // atau bisa pakai enum nanti
  createdAt DateTime @default(now())
}

